<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include('partials/head')  %>
</head>
<body> 
    <%- include('partials/nav') %>
    <div class="container">
        <div class="row mt-4">
            <div class="col">
              <a href="/albums" class="mt-4">&lt; retour</a>
                <h1 class="mb-4"> <%= album.title %></h1>
            </div>
        </div>
        <div class="row mb-4">
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Ajouter une image</h5>
                <form action="/albums/ <%= album._id %>" method="POST" class="form-inline" enctype="multipart/form-data">
                  <input type="file" name="file" class="form-control-fill">
                  <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
                </form>

                <% if (errors.length ) { %>
                  <div class="mb-3 mt-4 alert alert-danger" role="alert">
                         <%= errors[0] %>
                 </div>
             <% }%>

              </div>
            </div>
          </div>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">

          <% album.image.forEach((image,index) => { %>
          <div class="col">
            <div class="card">
              <img src="\uploads\<%= album._id %>\<%= image%>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= album.title %></h5>
                <a href="/albums/<%= album._id %>/delete/<%= index %>" class="btn btn-danger">Supprimer</a>
              </div>
            </div>
          </div>
          <% }) %>

        </div>
          </div>
        </div>
      </div>
    

    <%- include('partials/scripts')  %>
</body>
</html>